{
    "name": "dexswap-swapper-contracts-staging-deployer",
    "version": "1.0.0",
    "description": "A simple Hardhat project to deploy the whole DexSwap contract suite with user-chosen parameters, on any given network.",
    "main": "index.js",
    "author": "Agin DropDisco || gin.dropdisco@gmail.com",
    "license": "GPL-3.0",
    "private": true,
    "scripts": {
        "lint:eslint": "eslint \"tasks/*.js\"",
        "lint:prettier": "prettier -l tasks/*.js",
        "lint:commit-message": "commitlint -e",
        "lint": "yarn lint:eslint && yarn lint:prettier",
        "prepare:core": "mkdirp artifacts && cp dexswap-core/build/*.json artifacts",
        "prepare:periphery": "mkdirp artifacts && cp dexswap-periphery/build/*.json artifacts",
        "prepare:staking": "mkdirp artifacts && cp dexswap-staking/build/*.json artifacts",
        "deploy": "yarn prepare:core && yarn prepare:periphery && yarn prepare:staking && hardhat deploy"
    },
    "devDependencies": {
        "dexswap-staking-distribution": "git://github.com/Agin-DropDisco/dexswap-staking-distribution.git#v.0.1",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@nomiclabs/hardhat-truffle5": "^2.0.0",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "babel-eslint": "^10.1.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.18.0",
        "hardhat": "^2.0.10",
        "hardhat-dependency-compiler": "^1.1.1",
        "hardhat-deploy": "^0.7.0-beta.48",
        "hardhat-etherscan-abi": "^0.1.1",
        "hardhat-typechain": "^0.3.5",
        "husky": "^4.3.8",
        "prettier": "^2.2.1",
        "web3": "^1.3.3"
    },
    "dependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.2"
    }
}
